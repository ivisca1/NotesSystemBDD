@page
@model Notes.WebApp.Pages.NotesModel
@{
    ViewData["Title"] = "My Notes";
}

<style>
    * {
        box-sizing: border-box;
    }

    html, body {
        margin: 0;
        padding: 0;
        overflow-x: hidden;
    }

    body {
        font-family: Arial, sans-serif;
        max-width: 700px;
        margin: 40px auto;
        padding: 20px;
        background-color: #f9f9f9;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }

    h2 {
        text-align: center;
        margin-bottom: 30px;
    }

    form div {
        margin-bottom: 15px;
    }

    label {
        display: block;
        font-weight: bold;
        margin-bottom: 5px;
    }

    input[type="text"],
    textarea {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    button {
        background-color: #007bff;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

    button:hover {
        background-color: #0056b3;
    }

    ul {
        list-style: none;
        padding: 0;
    }

    ul li {
        background-color: white;
        padding: 10px;
        margin-top: 10px;
        border-radius: 5px;
        border: 1px solid #ddd;
    }

    .text-danger {
        color: red;
        font-size: 0.9em;
    }
</style>

<h2>My Notes</h2>

<form method="post" id="addNoteForm">
    <div>
        <label asp-for="NewNote.Title">Title:</label>
        <input asp-for="NewNote.Title" />
        <span asp-validation-for="NewNote.Title" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="NewNote.Content">Content:</label>
        <textarea asp-for="NewNote.Content"></textarea>
    </div>
    <button type="submit">Add Note</button>
</form>

@if (Model.Notes.Any())
{
    <h3 style="margin-top: 40px;">Your Notes</h3>
    <ul>
        @foreach (var note in Model.Notes)
        {
            <li><strong>@note.Title</strong><br />@note.Content</li>
        }
    </ul>
}
